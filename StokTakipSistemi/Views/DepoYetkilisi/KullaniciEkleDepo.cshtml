@model StokTakipSistemi.Models.KULLANICI
@{
    ViewBag.Title = "Kullanıcı Ekle";
}

<style>
    .page-title {
        font-size: 2em;
        font-weight: bold;
        color: #005f73;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 16px;
        font-weight: bold;
        color: #005f73;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #0a9396;
            outline: none;
        }

    .submit-btn {
        display: flex;
        justify-content: center;
    }

    .btn-primary {
        background-color: #005f73;
        border-color: #005f73;
        padding: 10px 20px;
        border-radius: 5px;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0a9396;
            border-color: #0a9396;
        }

    .alert-danger {
        color: #fff;
        background-color: #d9534f;
        border-color: #d43f00;
        padding: 10px;
        margin-top: 20px;
        text-align: center;
    }

</style>
<h2 class="page-title">Kullanıcı Ekle</h2>

@using (Html.BeginForm("KullaniciEkleDepo", "Depoyetkilisi", FormMethod.Post))
{
    <div class="form-container">
        <div class="form-group">
            <label class="form-label"><b>Username</b></label>
            @Html.TextBoxFor(m => m.KUL_USERNAME, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.KUL_USERNAME, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label"><b>Password</b></label>
            @Html.PasswordFor(m => m.KUL_SIFRE, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KUL_SIFRE, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label"><b>Ad</b></label>
            @Html.TextBoxFor(m => m.KUL_AD, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.KUL_AD, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label"><b>Soyad</b></label>
            @Html.TextBoxFor(m => m.KUL_SOYAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KUL_SOYAD, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label"><b>Statu</b></label>
            @Html.TextBoxFor(m => m.STATU, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.STATU, "", new { @class = "text-danger" })
        </div>

        <div class="form-group submit-btn">
            <button type="submit" class="btn btn-primary">Kullanıcıyı Ekle</button>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
    </div>
}

